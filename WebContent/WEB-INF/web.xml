<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ENI-Encheres</display-name>
  <welcome-file-list>
    <welcome-file>AccueilNonConnecte</welcome-file>
  </welcome-file-list>
  <!-- déclaration de la classe d'implémentation du filtre -->
    <filter>
       <filter-name>FiltreDesactiver</filter-name>
       <filter-class>fr.eni.servlets.FiltreDesactiver</filter-class>
    </filter>
   
    <!-- déclaration des URL interceptées par ce filtre -->
    <filter-mapping>
       <filter-name>FiltreDesactiver</filter-name>
       <!-- on aurait pu aussi définir une servlet filtrée, par un élément servlet-name -->
       <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>